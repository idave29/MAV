@model MAV.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h1 style="text-align: center; padding: 50px ">Iniciar Sesión</h1>
<br />
<div>
    <div id="columna">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username" class="Control-label">Email</label>
                <br />
                <input asp-for="Username" class="form-label" />
                <br />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding:10px">
                <label asp-for="Password" class="Control-label">Contraseña</label>
                <br />
                <input asp-for="Password" class="form-label" type="password" />
                <br />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding:10px">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding:10px">
                <input type="submit" value="Iniciar sesión" class="btn btn-outline-primary">
            </div>
        </form>
    </div>
</div>

<style>
    #columna
    {
        text-align:center; 
        font-size: large;
    }
</style>