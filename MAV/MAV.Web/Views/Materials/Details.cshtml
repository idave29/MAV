@model MAV.Web.Data.Entities.Material

@{
    ViewData["Title"] = "Detalles";
}

<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

<h1>Detalles</h1>

<div>
    <h4>Material</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Url.Content(Model.ImageURL)" style="width:100px;height:100px" />
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaterialModel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaterialModel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SerialNum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Function)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Function)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaterialType.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaterialType.Name)
        </dd><dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Owner.User.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Owner.User.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-primary"><span class="fas fa-arrow-left"></span></a>
    @if (this.User.IsInRole("Administrador") || this.User.IsInRole("Responsable") || this.User.IsInRole("Becario"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning"><span class="fas fa-pencil"></span></a>
    }
</div>
