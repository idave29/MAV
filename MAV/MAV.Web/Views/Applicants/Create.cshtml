@model MAV.Web.Models.ApplicantViewModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

<h2>Asign new Administrator</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">

                    <div class="form-group">
                        <label asp-for="UserUserName" class="control-label"></label>
                        <select asp-for="UserUserName" asp-items="Model.Users" class="form-control"> </select>
                        <span asp-validation-for="UserUserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label asp-for="TypeId" class="control-label"></label>
                    <select asp-for="TypeId" asp-items="Model.Types" class="form-control"></select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label>
                        <input asp-for="Debtor" /> @Html.DisplayNameFor(model => model.Debtor)
                    </label>
                </div>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="User.UserName"/>
                <a asp-action="Index" class="btn btn-primary"> <span class="fas fa-arrow-left"></span></a>
                <button type="submit" class="btn btn-success"> <span class="fas fa-plus"></span> </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}