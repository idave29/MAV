@model MAV.Web.Data.Entities.LoanDetail

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

<h1>Edit</h1>

<h4>LoanDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Material.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Material.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Material.Label)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Material.Label)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Material.MaterialModel)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Material.MaterialModel)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Material.SerialNum)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Material.SerialNum)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DateTimeOut)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DateTimeOut)
                </dd>
                <dt>
                    Loan to
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Loan.Applicant.User.FullName)
                </dd>
                <dt>
                    Loan by
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Loan.Intern.User.FullName)
                </dd>
            </dl>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Material" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="Loan" />
            <input type="hidden" asp-for="DateTimeOut" />
            <input type="hidden" asp-for="DateTimeIn" />
            <input type="hidden" asp-for="DateTimeOut" />
            <div class="form-group">
                <label asp-for="Observations" class="control-label"></label>
                <input asp-for="Observations" class="form-control" />
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-controller="Loans" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary"><span class="fas fa-arrow-left"></span></a>
                <button type="submit" class="btn btn-outline-success"><span class="fas fa-check"></span></button>
            </div>
        </form>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>

